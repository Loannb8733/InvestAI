# ===========================================
# InvestAI — Production Environment
# ===========================================
# Copy this file to .env.production and fill in real values
# NEVER commit .env.production to git

# Application
APP_NAME=InvestAI
APP_ENV=production
DEBUG=false

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_ME
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database — USE STRONG PASSWORD
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_USER=investai
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
POSTGRES_DB=investai

# Database Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_RECYCLE=3600

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Encryption
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=CHANGE_ME

# CORS — Your production domain
CORS_ORIGINS=https://yourdomain.com

# External APIs
FINNHUB_API_KEY=

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=InvestAI
SMTP_TLS=true

# Domain (for Let's Encrypt)
DOMAIN=yourdomain.com
EMAIL=your-email@example.com
